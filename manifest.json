{
  "manifest_version": 3,
  "name": "Simple Ad Blocker",
  "version": "1.0",
  "description": "Blocks ads on any website.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "declarativeNetRequest",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
